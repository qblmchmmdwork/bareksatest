<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.BareksaTest" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/primary_800</item>
        <item name="colorPrimaryVariant">@color/disabled</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.BareksaTest.TextAppearance.Design.Tab.Large" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/opensans_regular</item>
        <item name="tabTextColor">@color/disabled</item>
        <item name="tabSelectedTextColor">#F00</item>
        <item name="textAllCaps">false</item>
        <item name="android:textFontWeight">1000</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.BareksaTest.TextAppearance.Design.Tab.Small" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:textFontWeight">800</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.BareksaTest.Toolbar.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="Theme.BareksaTest.Button.SemiBold" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/montserrat_semibold</item>
    </style>
</resources>